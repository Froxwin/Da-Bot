{
  "compilerOptions": {
    "outDir": "./out",
    "allowJs": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "removeComments": true,
    "noEmitOnError": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "checkJs": true,
    "diagnostics": true,
    "pretty": true,
    "newLine": "crlf",
    "noImplicitAny": false,
    "strict": true,
    "strictNullChecks": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
