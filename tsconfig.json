{
  "compilerOptions": {
    "outDir": "./out",
    "allowJs": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "removeComments": true,
    "noEmitOnError": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "checkJs": true,
    "diagnostics": true,
    "pretty": true,
    "newLine": "crlf",
    "noImplicitAny": false,
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
        "@engine/*": ["src/engine"],
        "@classes/*": ["src/engine/classes/*"],
        "@config/*": ["src/engine/config/*"],
        "@events/*": ["src/engine/events/*"],
        "@functions/*": ["src/engine/functions/*"]
    },
    "sourceMap": true,
    "rootDir": "./src"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
