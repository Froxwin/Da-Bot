{
  "compilerOptions": {
    "outDir": "out",
    "allowJs": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "removeComments": true,
    "noEmitOnError": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "checkJs": true,
    "diagnostics": false,
    "pretty": true,
    "newLine": "crlf",
    "noImplicitAny": false,
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "sourceMap": true,
    "rootDir": "./src",
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "listFiles": true
  },
  "include": ["node_modules/@types", "./src/**/*"],
  "exclude": ["node_modules"]
}
